        <li>500 zł</li>
    </div>
</div>

<script type="text/javascript">
    let circles = document.querySelectorAll('.circle');
    circles.forEach((circle) =>{
        circle.addEventListener('click', () =>{
            circle.animate([{
                background : "#482b7f",
                opacity: 1,
                color: "white"
            },
                {
                    background : "#ececec",
                    opacity: ".8",
                    color: "#482b7f"
                }
            ], {
                duration: 300,
                fill: "forwards"
            });
        });
    });
</script>
<script src="jquery-3.2.1.min.js"></script>
<script src="main_user.js"></script>
</body>

</html>